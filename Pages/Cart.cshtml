@page
@model IntexII.Pages.CartModel

@{
}

<h2>Your Cart</h2>

<!-- creates table for cart -->
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Product Name</th>
        <th>Category</th>
        <th>Quantity</th>
        <th class="text-right">Amount</th>
        <th class="text-right">Subtotal</th>
        <th></th>
    </tr>
    </thead>
    
    <!-- populates pre-made table with data -->
    <tbody>
    @foreach (var l in Model.Cart?.Lines ?? Enumerable.Empty<Models.Cart.CartLine>())
    {
        <tr>
            <td class="text-left">@l.Product.ProductName</td>
            <td class="text-left">@l.Product.Category</td>
            <td class="text-center">@l.Quantity</td>
            <td class="text-right">@l.Product.Price</td>
            <td class="text-right">@((l.Quantity * l.Product.Price).ToString("c"))</td>
            <td class="text-center">
                <form asp-page-handler="Remove" method="post">
                    <input type="hidden" name="ProductId" value="@l.Product.ProductId"/>
                    <input type="hidden" name="returnUrl" value="@Model?.ReturnUrl"/>
                    <button type="submit" class="btn btn-sm btn-danger"> Remove </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
    
    <tfoot>
    <!-- calulates total of items in cart -->
    <tr>
        <td colspan="3" class="text-right">Total:</td>
        <td class="text-right">@Model.Cart?.CalculateTotal().ToString("c")</td>
    </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-warning" asp-controller="Home" asp-action="CreateOrder">Checkout</a>
</div>

<!-- button that returns back to session -->
<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>

