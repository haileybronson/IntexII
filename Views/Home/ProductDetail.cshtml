<div class="container product-details">
        <div class="row">
            <div class="col-md-6 product-image">
                @if (!string.IsNullOrEmpty(Model.img_Link))
                {
                    <img src="@Model.img_Link" alt="Image of @Model.ProductName">
                }
            </div>
            <div class="col-md-6">
                <h1 class="product-title">@Model.ProductName</h1>
                <p class="product-price">$@Model.Price</p>
                <p class="product-info"><strong>Category:</strong>  @Model.Category</p>
                <p class="product-info"><strong>Color:</strong>  @Model.primary_Color</p>
                <p class="product-info indent"> @Model.Description</p>
            </div>
        </div>
    </div>