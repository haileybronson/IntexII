@model IntexII.Models.Product


<!DOCTYPE html>
<html>
<head>
    <title>Add Product</title>
</head>
<body>
<h2>Add New Product</h2>
<form method="post" action="@Url.Action("AddProduct", "Brian")">
    <div>
        <label for="ProductName">Product Name:</label>
        <input type="text" id="ProductName" name="ProductName" required>
    </div>
    <div>
        <label for="Year">Year:</label>
        <input type="text" id="Year" name="Year" required>
    </div>
    <div>
        <label for="num_Parts">Number of Parts:</label>
        <input type="text" id="num_Parts" name="num_Parts" required>
    </div>
    <div>
        <label for="Price">Price:</label>
        <input type="text" id="Price" name="Price" required>
    </div>
    <div>
        <label for="img_Link">Image Link:</label>
        <input type="text" id="img_Link" name="img_Link">
    </div>
    <div>
        <label for="primary_Color">Primary Color:</label>
        <input type="text" id="primary_Color" name="primary_Color">
    </div>
    <div>
        <label for="secondary_Color">Secondary Color:</label>
        <input type="text" id="secondary_Color" name="secondary_Color">
    </div>
    <div>
        <label for="Description">Description:</label>
        <textarea id="Description" name="Description"></textarea>
    </div>
    <div>
        <label for="Category">Category:</label>
        <input type="text" id="Category" name="Category">
    </div>
    <div>
        <button type="submit">Add Product</button>
    </div>
</form>
</body>
</html>