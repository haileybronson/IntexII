@model IntexII.Models.Product

<div class="gradient-header">
    <h1 class="title">Update Product</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto m-5 filter-box">
            <form asp-action="UpdateProduct" method="post">
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="ProductName"></label>
                    <input asp-for="ProductName" class="form-control input-purple" />
                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control input-purple"/>
                </div>
                <div class="form-group">
                    <label asp-for="num_Parts"></label>
                    <input asp-for="num_Parts" class="form-control input-purple" />
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control input-purple"/>
                </div>
                <div class="form-group">
                    <label asp-for="img_Link"></label>
                    <input asp-for="img_Link" class="form-control input-purple"/>
                </div>
                <div class="form-group">
                    <label asp-for="primary_Color"></label>
                    <input asp-for="primary_Color" class="form-control input-purple"/>
                </div>
                <div class="form-group">
                    <label asp-for="secondary_Color"></label>
                    <input asp-for="secondary_Color" class="form-control input-purple"/>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control input-purple"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control input-purple"/>
                </div>
                <br>
                <div class="form-group text-center">
                    <button type="submit" class="btn-primary btn">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>